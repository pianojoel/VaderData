@page
@model VaderData.Pages.DifferencesModel
@{
}
<div class="transparentbox text-center">
    <h5>Visar skillnad i medeltemperatur inomhus och utomhus</h5>
</div>
<form method="post">
    <input type="hidden" asp-for="Desc" value=@Model.Desc />
    

    <table class="table table-dark">
        <caption>Visar skillnad i medeltemperatur inomhus och utomhus</caption>
        <thead class="thead-dark">
            <tr>
                <th>Datum</th>
                <th>Inomhus</th>
                <th>UtomHus</th>
                <th><button class="btn btn-link" type="submit" asp-page-handler="AvgDiff">Skillnad</button>@Html.Raw(Model.Desc ? "&#11014;" : "&#11015;")</th>
            </tr>
        </thead>
        @foreach (var row in Model.Data)
        {
            <tr>
                <td>@row.DateTime.ToShortDateString()</td>
                <td>@Math.Round(row.IndoorAvgTemp, 1)&#176;C</td>
                <td>@Math.Round(row.OutdoorAvgTemp, 1)&#176;C</td>
                <td>@Math.Round(row.Difference, 1)&#176;C</td>
            </tr>
        }


    </table>
</form>