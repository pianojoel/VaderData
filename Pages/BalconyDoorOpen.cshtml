@page
@model VaderData.Pages.BalconyDoorOpenModel
@{
}
<div class="bg-dark rounded text-center p-1 mb-2 text-light">
    <h5>Visar tid som balkongdörren varit öppen per dag, sorterat fallande</h5>
</div>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th>Datum</th>
            <th>Tid öppen</th>
        </tr>
    </thead>

    @foreach (var row in Model.Data)
    {
        <tr>
            <td>@row.DateTime.ToShortDateString()</td>
            <td>@row.TimeDoorOpen</td>

        </tr>



    }

</table>